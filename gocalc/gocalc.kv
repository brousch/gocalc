#:kivy 1.7.1

#:set color_dk_gray 0.1, 0.1, 0.1, 1
#:set color_lt_gray 0.9, 0.9, 0.9, 1

<GoCalc>:
    orientation: 'vertical'
    Label:
        text: 'Japanese Rules'
    BoxLayout:
        orientation: 'horizontal'
        canvas.before:
            Color:
                rgba: color_dk_gray
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Label:
                text: 'Territory'
                color: color_lt_gray
            TextInput:
                id: b_terr
                text: '0'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Label:
                text: 'Prisoners'
                color: color_lt_gray
            TextInput:
                id: b_pris
                text: '0'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Label:
                text: 'Dead Stones'
                color: color_lt_gray
            TextInput:
                id: b_dead
                text: '0'
        Label:
            size_hint_x: 0.2
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Label:
                text: 'Score'
                color: color_lt_gray
            Label:
                text: root.calc_score(b_terr.text, b_pris.text, b_dead.text)
                color: color_lt_gray
    BoxLayout:
        orientation: 'horizontal'
        canvas.before:
            Color:
                rgba: color_lt_gray
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Label:
                text: 'Territory'
                color: color_dk_gray
            TextInput:
                id: w_terr
                text: '0'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Label:
                text: 'Prisoners'
                color: color_dk_gray
            TextInput:
                id: w_pris
                text: '0'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Label:
                text: 'Dead Stones'
                color: color_dk_gray
            TextInput:
                id: w_dead
                text: '0'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Label:
                text: 'Komi'
                color: color_dk_gray
            TextInput:
                id: w_komi
                text: '0'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Label:
                text: 'Score'
                color: color_dk_gray
            Label:
                text: root.calc_score(w_terr.text, w_pris.text, w_dead.text, w_komi.text)
                color: color_dk_gray
